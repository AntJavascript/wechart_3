<scroll-view type="custom">
<van-field
    model:value="{{ name }}"
    label="姓名"
    placeholder="请输入真实姓名"
    input-align="right"
    required
  />
<van-field
    model:value="{{ phone }}"
    label="联系电话"
    placeholder="请输入联系电话"
    input-align="right"
    required
  />
<van-field
    model:value="{{ phone }}"
    label="价格"
    placeholder="请输入价格/小时"
    input-align="right"
    required
  />
<picker bindchange="bindDisciplineChange" value="{{discipline}}" range="{{disciplineArray}}">
    <van-field
        value="{{discipline !== '' && disciplineArray[discipline]}}"
        label="学科"
        placeholder="请选择教学学科"
        input-align="right"
        readonly
        required
        is-link
      />
</picker>
<van-field
    model:value="{{ teachingYears }}"
    label="教龄"
    type="number"
    placeholder="请输入教龄"
    input-align="right"
    required
  />
<picker bindchange="bindEducationChange" value="{{discipline}}" range="{{educationArray}}">
    <van-field
        value="{{discipline !== '' && educationArray[education]}}"
        label="学历"
        placeholder="请选择学历"
        input-align="right"
        readonly
        required
        is-link
      />
</picker>
<van-field
    model:value="{{ school }}"
    label="毕业院校"
    placeholder="请输入毕业院校"
    input-align="right"
    required
  />
<picker bindchange="bindTeachingMethodChange" value="{{teachingMethod}}" range="{{teachingMethodArray}}">
    <van-field
        value="{{teachingMethod !== '' && teachingMethodArray[teachingMethod]}}"
        label="授课方式"
        placeholder="请选择授课方式"
        input-align="right"
        readonly
        required
        is-link
      />
</picker>
<van-field
    value="{{personaldesc}}"
    label="个人介绍"
    placeholder="请填写你的详细个人介绍"
    required
    show-word-limit
    autosize= { maxHeight: 100, minHeight: 50 }
  />
<view class="personal-photos">
    <view>上传照片<text class="required">*</text></view>
    <van-uploader file-list="{{ personalPhotos }}" bind:after-read="afterRead" multiple />
</view>
</scroll-view>
