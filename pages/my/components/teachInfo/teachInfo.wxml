<view class='teach-info'>
  <view class='rang-time-t'>我的预约时间段</view>
  <view class='rang-time-list'></view>
  <van-button type="primary" bind:tap="add">添加可预约时间段</van-button>
  <van-popup show="{{ rangeTimeShow }}"position="bottom" custom-style="height: 30%;">
    <view class="date-range-header">
      <view bind:tap="cancel">取消<view>
      <view bind:tap="confirm">确定<view>
    </view>
    <view class="start" bind:tap="handle" data-type="start">{{startDate}}</view> ~ <view class="end" bind:tap="handle" data-type="end">{{endDate}}</view>
    <van-datetime-picker
      type="time"
      show-toolbar="false"
      data-type='start'
      value="{{ startDate }}"
      bind:input="onInput"
      wx:if="{{currentType === 'start'}}"
    />
  <van-datetime-picker
      type="time"
      show-toolbar="false"
      data-type='end'
      value="{{ endDate }}"
      bind:input="onInput"
      wx:if="{{currentType === 'end'}}"
    />
  </van-popup>
</view>
