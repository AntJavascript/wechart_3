.user-info-wrapper {
  display: flex;
  align-items: center;
  background: #1989fa;
  padding: 20rpx;
  padding-right: 0;
  position: relative;
  
  
}
.user-info-wrapper .face {
    margin-right: 14rpx;
  }
.user-info-wrapper .user-info {
    font-size: 14rpx;
    color: #fff;
    
    .level{
      background: #eee;
    }
  }
.user-info-wrapper .user-info .name{
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
.user-info-wrapper .user-info .level{
      background: #eee;
    }
.user-info-wrapper .edit {
    font-size: 14rpx;
    padding: 8rpx;
    background: #eee;
    position: absolute;
    right: 0;
    border-top-left-radius: 6rpx;
    border-bottom-left-radius: 6rpx;
  }
