.container {
    padding: 0;
}
.page-section {
    width: 100%;
    background: #1989fa;
}
.menus {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    margin-top: 22px;
}
.menus .item {
    width: 25%;
    text-align: center;
    margin-bottom: 20px;
}
.menus .icon {
    width: 30px;
    height: 30px;
    background: linear-gradient(#1989fa, #7fb7f0);
    border-radius: 50px;
    padding: 14px;
}
.menus .title {
    color: #000;
    display: block;
    font-size: 14px;
}